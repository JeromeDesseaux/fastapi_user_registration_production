# Application
APP_NAME=user-registration-api
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=False

# Database
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=user_registration
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=Europe/Paris
CELERY_ENABLE_UTC=True
CELERY_TASK_ACKS_LATE=True
CELERY_TASK_REJECT_ON_WORKER_LOST=True
CELERY_WORKER_PREFETCH_MULTIPLIER=4
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000
CELERY_RESULT_EXPIRES=3600

# Security
SECRET_KEY=change-this-in-production
ACTIVATION_CODE_EXPIRY_SECONDS=60

# Email Service (SMTP)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@dailymotion.com
SMTP_USE_TLS=False

# Feature Flags
ENABLE_METRICS=true
ENABLE_RATE_LIMITING=true

# Rate Limiting Configuration
RATE_LIMIT_REGISTRATION_PER_HOUR=5
RATE_LIMIT_ACTIVATION_PER_MINUTE=3
RATE_LIMIT_GLOBAL_PER_MINUTE=1000
